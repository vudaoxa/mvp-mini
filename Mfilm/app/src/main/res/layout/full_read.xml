<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_translucent"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/fragment_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:id="@+id/header"
                style="@style/LinearLayout_center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/cross"
                    android:layout_width="@dimen/dimen48"
                    android:layout_height="@dimen/dimen48"
                    android:layout_marginRight="@dimen/dimen15"
                    android:background="@drawable/main_background"
                    android:clickable="true"
                    android:contentDescription="@string/close_description" />

                <TextView
                    android:id="@+id/tv_Title"
                    style="@style/TextStyle.Serif.Bold.20"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_24" />
                <!--<TextView-->
                <!--android:id="@+id/tv_Title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:fontFamily="sans-serif-condensed"-->
                <!--android:text=""-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="24sp"-->
                <!--android:textStyle="bold" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="17sp" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>