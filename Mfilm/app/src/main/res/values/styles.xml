<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle">
        <item name="android:layout_marginTop">@dimen/dimen2</item>
        <item name="android:layout_marginBottom">@dimen/dimen2</item>
        <item name="android:layout_marginLeft">@dimen/dimen2</item>
        <item name="android:layout_marginRight">@dimen/dimen2</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>

    </style>

    <style name="TextStyle.Regular.14" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Regular.manga_intro_14" parent="TextStyle">
        <item name="android:layout_marginLeft">@dimen/dimen5</item>
        <item name="android:layout_marginRight">@dimen/dimen5</item>
        <item name="android:maxLines">@integer/max_line_item_property</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>
    <style name="TextStyle.Regular.16.center" parent="TextStyle">
        <item name="android:layout_margin">@dimen/dimen5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Regular.16" parent="TextStyle">
        <item name="android:layout_margin">@dimen/dimen5</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Regular.no_pading" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Regular.no_pading_center" parent="TextStyle.Regular.no_pading">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Regular.no_pading_16" parent="TextStyle.Regular.no_pading">
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="TextStyle.Regular.no_pading_14" parent="TextStyle.Regular.no_pading">
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>
    <style name="TextStyle.Regular.20" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Regular.center" parent="TextStyle.Regular.16.center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen5</item>
        <item name="android:background">@color/navy_blue_dark</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Bold.14" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Bold.16" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Bold.20" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextStyle.Bold.center" parent="TextStyle.Bold.16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen5</item>
        <item name="android:background">@color/navy_blue_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="Button.Primary.Medium" parent="Button.Primary">
        <item name="android:maxWidth">@dimen/dimen200</item>
        <item name="android:maxHeight">@dimen/dimen56</item>
    </style>

    <style name="Button.Primary.Wrap" parent="Button.Primary">
        <item name="android:minWidth">@dimen/dimen100</item>
    </style>
    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen14</item>
    </style>

    <style name="AppTheme.Button.Grey.40" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_40</item>
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:background">@color/grey_40</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="AppTheme.Button.Grey.30" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_40</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:background">@color/grey_30</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <!--<style name="AppTheme.Button.Grey" parent="Widget.AppCompat.Button">-->
    <!--<item name="android:background">@drawable/button</item>-->
    <!--<item name="android:textColor">@android:color/white</item>-->
    <!--<item name="android:layout_height">@dimen/view_single_height</item>-->
    <!--<item name="android:textAllCaps">false</item>-->
    <!--<item name="android:textSize">@dimen/mdl_navigation_drawer_row_title_size</item>-->
    <!--</style>-->

    <style name="VerticalLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout_center_vertical">
        <!--<item name="tabTextAppearance">@style/MyCustomTabText</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearLayout_center_horizontal">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout_center">
        <!--<item name="tabTextAppearance">@style/MyCustomTabText</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Button.Login" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>


    <style name="AppTheme.TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.EditTextLogin">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="DetailsActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DetailsActivityThemeDark" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorDarkThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkThemePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/grey_30</item>

    </style>

    <style name="MyButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


    <style name="AppTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->

        <item name="searchBackground">@color/white</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

    </style>

    <color name="white">#ffffff</color>
    <color name="colorDarkThemePrimary">#042233</color>
    <color name="colorDarkThemePrimaryDark">#031621</color>

    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
