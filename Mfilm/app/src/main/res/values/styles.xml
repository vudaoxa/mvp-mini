<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/navy_blue_dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColor</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorDarkThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkThemePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColorDarkTheme</item>

    </style>

    <!--<style name="AppTheme.Splash" parent="AppTheme.NoActionBar">-->
    <!--<item name="android:windowBackground">@color/transparent</item>-->
    <!--</style>-->

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--=========================text styles========================-->
    <style name="TextStyle">
        <item name="android:layout_marginTop">@dimen/dimen2</item>
        <item name="android:layout_marginBottom">@dimen/dimen2</item>
        <item name="android:layout_marginLeft">@dimen/dimen2</item>
        <item name="android:layout_marginRight">@dimen/dimen2</item>
        <item name="android:textColor">@color/black_effective</item>
    </style>

    <style name="TextStyle.Sans.Regular" parent="TextStyle">
        <item name="android:layout_margin">@dimen/dimen5</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Sans.Regular</item>
    </style>

    <style name="TextStyle.Sans.Regular.16" parent="TextStyle.Sans.Regular">
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="TextStyle.Sans.Regular.16.center" parent="TextStyle.Sans.Regular.16">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Regular.14" parent="TextStyle.Sans.Regular">
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="TextStyle.Regular.manga_intro_14" parent="TextStyle.Regular.14">
        <item name="android:layout_marginLeft">@dimen/dimen5</item>
        <item name="android:layout_marginRight">@dimen/dimen5</item>
        <item name="android:padding">@dimen/dimen0</item>
        <item name="android:maxLines">@integer/max_line_item_property</item>
    </style>
    <style name="TextStyle.Regular.no_pading" parent="TextStyle">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Sans.Regular</item>
    </style>

    <style name="TextStyle.Regular.no_pading_center" parent="TextStyle.Regular.no_pading">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Regular.no_pading_16" parent="TextStyle.Regular.no_pading">
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="TextStyle.Regular.no_pading_14" parent="TextStyle.Regular.no_pading">
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="TextStyle.Regular.20" parent="TextStyle.Sans.Regular">
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>

    <style name="TextStyle.Regular.center" parent="TextStyle.Sans.Regular">
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen5</item>
    </style>

    <style name="TextStyle.Bold" parent="TextStyle.Sans.Regular">
        <item name="android:textAppearance">@style/TextAppearance.Text.Sans.Bold</item>
    </style>

    <style name="TextStyle.Bold.14" parent="TextStyle.Bold">
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="TextStyle.Bold.16" parent="TextStyle.Bold">
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="TextStyle.Bold.20" parent="TextStyle.Bold">
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>

    <style name="TextStyle.Serif" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Serif</item>
    </style>

    <style name="TextStyle.Serif.20" parent="TextStyle.Serif">
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>

    <style name="TextStyle.Serif.Bold.20" parent="TextStyle.Serif.20">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Bold.center" parent="TextStyle.Bold">
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen5</item>
    </style>

    <style name="TextAppearance.Text.Serif" parent="android:TextAppearance">
        <item name="android:fontFamily">@string/font_serif</item>
    </style>

    <style name="TextAppearance.Text.Sans.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Text.Sans.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Text.Sans.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Italic.ttf</item>
    </style>

    <style name="TextAppearance.Text.Canaro" parent="android:TextAppearance">
        <item name="fontPath">fonts/canaro_extra_bold.otf</item>
    </style>

    <style name="TextStyle.Canaro" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:padding">@dimen/dimen5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Canaro</item>
    </style>

    <style name="TextStyle.Canaro.20" parent="TextStyle.Canaro">
        <item name="android:textSize">@dimen/txt_size_20</item>
    </style>
    <!--=========================end button styles========================-->

    <style name="ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--=========================button styles========================-->
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:layout_height">@dimen/dimen48</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen5</item>
        <item name="android:paddingRight">@dimen/dimen5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
    </style>

    <style name="PrimaryFlatButton" parent="MyButton">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <!--<style name="Button" parent="Widget.AppCompat.Button">-->
    <style name="Button" parent="MyButton">
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen14</item>
    </style>

    <style name="AppTheme.Button.Grey.40" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_40</item>
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:background">@color/grey_40</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="AppTheme.Button.Grey.30" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/grey_40</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:background">@color/grey_30</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen150</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Sans.Regular</item>
    </style>

    <style name="Button.Primary.Medium" parent="Button.Primary">
        <item name="android:maxWidth">@dimen/dimen200</item>
        <item name="android:maxHeight">@dimen/dimen56</item>
    </style>

    <style name="Button.Primary.Wrap" parent="Button.Primary">
        <item name="android:minWidth">@dimen/dimen100</item>
    </style>
    <!--==========================end button styles=======================-->

    <style name="ToolBar_Btn">
        <!--<item name="tabTextAppearance">@style/MyCustomTabText</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:padding">@dimen/dimen15</item>
    </style>

    <style name="default_background">
        <item name="android:background">?android:windowBackground</item>
    </style>
    <style name="VerticalLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout_default_margin">
        <item name="android:layout_marginLeft">@dimen/dimen5</item>
        <item name="android:layout_marginRight">@dimen/dimen5</item>
        <item name="android:layout_marginTop">@dimen/dimen0</item>
    </style>

    <style name="LinearLayout_center_vertical">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearLayout_center_horizontal">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout_center">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Button.Login" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
    </style>

    <style name="AppTheme.TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.EditTextLogin">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!--=========================filmy========================-->

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="DetailsActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DetailsActivityThemeDark" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorDarkThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkThemePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/grey_30</item>

    </style>

    <style name="MyButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>


    <style name="AppTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <!--=========================end filmy========================-->

</resources>
